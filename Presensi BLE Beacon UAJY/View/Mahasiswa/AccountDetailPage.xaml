                                   TextColor="Black"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start" />
                            <Label Text="Tanggal Lahir : -"
                                   TextColor="Black"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start" />
                            <Label Text="Tanggal Lahir : -"
                                   TextColor="Black"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start" />
                            <Label Text="Kontak : -"
                                   TextColor="Black"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start" />
                            <Label Text="Mahasiswa : Informatika"
                                   TextColor="Black"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start" />
                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>